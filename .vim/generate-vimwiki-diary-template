#!/usr/bin/python
import sys
import datetime

template = """---
title: "Markdown"
author: [Ingles]
date: "{date}"
keywords: [Markdown, Example]
---
# Ingles Note\\
resume|~~structure|paraphrase~~

## Review Vocabulary\\
* []

## New Vocabulary\\
* []

### P1
Sentences belong here...\\"""

# adding path to date
#date = (datetime.date.today() if len(sys.argv) < 2
        # Expecting filename in YYYY-MM-DD.foo format
#        else sys.argv[1].rsplit(".", 1)[0])

#remove path on date
date = (datetime.date.today() if len(sys.argv) < 2
else sys.argv[1].rsplit(".", 1)[0].rsplit("/", 1)[1])
print(template.format(date=date))
